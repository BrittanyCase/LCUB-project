@model Construction_Tool.ViewModels.OwnerViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using(Html.BeginForm())
{
    @Html.AntiForgeryToken();
<div class="form-horizontal">
    <div class="form-group row">
        <label class="control-label col-md-2">Username:</label>
        <div class="col-md-10">
            <h4>@Html.DisplayFor(model => model.Owner.USER)</h4>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Owner.USER, new { htmlAttributes = new { @class = "form-control d-none" } })
            @Html.ValidationMessageFor(model => model.Owner.USER, "", new { @class = "text-danger d-none" })
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Owner.OWNER_ID, new { htmlAttributes = new { @class = "form-control d-none" } })
            @Html.ValidationMessageFor(model => model.Owner.OWNER_ID, "", new { @class = "text-danger d-none" })
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-2">Password:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Owner.PASSWORD, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder="Password" } })
            @Html.ValidationMessageFor(model => model.Owner.PASSWORD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Save" class="form-control btn btn-primary rounded submit" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        </div>
    </div>
</div>
}